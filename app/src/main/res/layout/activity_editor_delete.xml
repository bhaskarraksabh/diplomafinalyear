<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorDeleteActivity">

    <EditText
        android:id="@+id/paswd_display"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_phonenumber"
        android:layout_marginTop="78dp"
        android:focusable="false"
        android:hint="Existing Password" />

    <EditText
        android:id="@+id/edit_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_spassword"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/phone_number"
        android:inputType="phone"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="76dp" />

    <EditText
        android:id="@+id/edit_spassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="Change Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="144dp" />

    <EditText
        android:id="@+id/edit_retype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_spassword"
        android:layout_marginTop="193dp"
        android:ems="10"
        android:hint="Re-type password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="211dp" />


    <Button
        android:id="@+id/edit_saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edit_phonenumber"
        android:layout_marginBottom="113dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/button"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="377dp" />

    <Button
        android:id="@+id/edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/edit_saveButton"
        android:layout_marginEnd="111dp"
        android:background="@color/colorPrimaryDark"
        android:text="Delete"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edit_spassword"
        android:layout_marginBottom="217dp"
        android:text="Default Sending Details" />




</RelativeLayout>